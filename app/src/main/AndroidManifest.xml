<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.gunnner"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.gunnner.ui.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.gunnner.ui.shots.OpenedShotActivity"
            android:label="@string/title_activity_shot"
            android:theme="@style/Swipeable"/>
        <activity
            android:name="com.gunnner.ui.profile.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/Swipeable"/>
        <activity
            android:name="com.gunnner.ui.shots.ShotImageActivity"
            android:label="@string/title_activity_shot_image"
            android:theme="@style/Translucent"/>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="5a3b0203215a43a61151b78162b22359b3acc655"/>
    </application>

</manifest>
