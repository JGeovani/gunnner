<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Dribbblestyle">
        <!-- Customize your theme here. -->
    </style>

    <style name="Swipeable" parent="@android:style/Theme.Holo">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_mtrl_am_alpha</item>
    </style>


    <style name="Translucent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <!-- Empty on purpose -->
    </style>

    <style name="Theme.Dribbblestyle" parent="@android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_dribbblestyle
        </item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Dribbblestyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Dribbblestyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Dribbblestyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Dribbblestyle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Dribbblestyle</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_dribbblestyle</item>
        <item name="android:actionModeSplitBackground">
            @drawable/cab_background_bottom_dribbblestyle
        </item>
        <item name="android:actionModeCloseButtonStyle">
            @style/ActionButton.CloseMode.Dribbblestyle
        </item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_mtrl_am_alpha</item>
    </style>

    <style name="ActionBar.Solid.Dribbblestyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:logo">@drawable/logo</item>
        <item name="android:colorBackground">#0e0e0e</item>
        <item name="android:background">#0e0e0e</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dribbblestyle</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dribbblestyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Dribbblestyle</item>
    </style>

    <style name="ActionBar.Transparent.Dribbblestyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_stacked_solid_dribbblestyle</item>
        <item name="android:logo">@drawable/logo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Dribbblestyle</item>
    </style>

    <style name="PopupMenu.Dribbblestyle" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dribbblestyle</item>
    </style>

    <style name="DropDownListView.Dribbblestyle" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_dribbblestyle</item>
    </style>

    <style name="ActionBarTabStyle.Dribbblestyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_dribbblestyle</item>
    </style>

    <style name="DropDownNav.Dribbblestyle" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_dribbblestyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dribbblestyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_dribbblestyle</item>
    </style>

    <style name="ProgressBar.Dribbblestyle" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_dribbblestyle</item>
    </style>

    <style name="ActionButton.CloseMode.Dribbblestyle" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_dribbblestyle</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Dribbblestyle.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Dribbblestyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Dribbblestyle</item>
    </style>

    <style name="ColonTextView">
        <item name="android:text">:</item>
        <item name="android:textColor">#f3f3f3</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">#191819</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:translationX">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileLabel">
        <item name="android:background">#191819</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationX">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_toLeftOf">@id/colon1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileValue">
        <item name="android:layout_toRightOf">@id/colon1</item>
        <item name="android:layout_toEndOf">@id/colon1</item>
        <item name="android:textColor">@color/dribbble</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationX">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
