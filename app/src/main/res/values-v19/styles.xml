<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowTranslucentNavigation">@bool/translucent_navigation</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_mtrl_am_alpha</item>
    </style>

    <style name="Swipeable" parent="@android:style/Theme.Holo">
        <item name="android:windowTranslucentNavigation">@bool/translucent_navigation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_mtrl_am_alpha</item>
    </style>

    <style name="Translucent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>